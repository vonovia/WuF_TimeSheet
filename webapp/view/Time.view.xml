<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core"
	controllerName="com.sap.build.standard.wuFTimesheet.controller.Time">
	<Page showHeader="true" title="" showFooter="true" showNavButton="true" navButtonPress="_onPageNavButtonPress">
		<content>
			<layout:BlockLayout background="Default">
				<layout:content>
					<layout:BlockLayoutRow scrollable="false">
						<layout:content>
							<layout:BlockLayoutCell width="2" title="" titleAlignment="Begin" titleLevel="Auto">
								<layout:content>
									<form:Form width="100%" editable="true" visible="true" id="TimeEntryForm">
										<form:title>
											<core:Title text="Neues Zeitereignis" level="Auto"/>
										</form:title>
										<form:formContainers>
											<form:FormContainer visible="true" id="FormContainer">
												<form:formElements>
													<form:FormElement visible="true">
														<form:label>
															<Label text="Datum" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit"/>
														</form:label>
														<form:fields>
															<DatePicker width="100%" id="EventDate" />
														</form:fields>
													</form:FormElement>
													<form:FormElement visible="true">
														<form:label>
															<Label text="Ereignistyp" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit"/>
														</form:label>
														<form:fields>
															<ComboBox id="CmbEvenType" editable="true" enabled="true" visible="true" width="auto" valueState="None" maxWidth="100%"
																items="{path:'Time>/TimeEventTypeSet'}">
																<items>
																	<core:Item text="{Time>TimeTypeText}" enabled="true" key="{Time>TimeType}"/>
																</items>
															</ComboBox>
														</form:fields>
													</form:FormElement>
													<form:FormElement visible="true">
														<form:label>
															<Label text="Zeit" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit"/>
														</form:label>
														<form:fields>
															<TimePicker id="EventTime" showValueHelp="true" enabled="true" visible="true" width="auto" maxLength="0" displayFormat="HH:mm"/>
														</form:fields>
													</form:FormElement>
												</form:formElements>
												<form:title/>
											</form:FormContainer>
										</form:formContainers>
										<form:layout>
											<form:ResponsiveGridLayout adjustLabelSpan="false" columnsL="2" labelSpanL="3" columnsM="1" labelSpanM="2" labelSpanS="12"/>
										</form:layout>
									</form:Form>
									<Button text="Anlegen" type="Accept" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"
										press="_onBtnCreateTime"/>
								</layout:content>
							</layout:BlockLayoutCell>
							<layout:BlockLayoutCell width="2" title="" titleAlignment="Begin" titleLevel="Auto">
								<layout:content>
									<List id="TimeList" mode="Delete" width="100%" headerText="Header" footerText="" backgroundDesign="Solid" showSeparators="All"
										growing="true" growingThreshold="20" growingScrollToLoad="true" itemPress="_onListItemPress" items="{path : 'Time>/TimeEventSet'}">
										<infoToolbar>
											<Toolbar width="100%" height="auto" design="Auto" visible="false" enabled="true">
												<content>
													<Label text="Label" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit"/>
												</content>
											</Toolbar>
										</infoToolbar>
										<headerToolbar>
											<Toolbar visible="true" enabled="true" width="" design="Solid">
												<content>
													<SearchField placeholder="Search" showSearchButton="true" visible="true" width="100%"/>
												</content>
											</Toolbar>
										</headerToolbar>
										<items>
											<ObjectListItem intro="" title="{Time>TimeTypeText}"
												number="{path: 'Time>EventTime', type: 'sap.ui.model.odata.type.Time', formatOptions: { UTC: true, pattern: 'HH:mm' }}" numberUnit="{Time>StatusText}"
												numberState="None" type="Active" selected="true" showMarkers="false" press="_onObjectListItemPress">
												<attributes/>
												<firstStatus>
													<ObjectStatus text="" state="None"/>
												</firstStatus>
												<secondStatus/>
											</ObjectListItem>
										</items>
									</List>
								</layout:content>
							</layout:BlockLayoutCell>
						</layout:content>
					</layout:BlockLayoutRow>
				</layout:content>
			</layout:BlockLayout>
		</content>
		<footer/>
		<headerContent/>
		<subHeader/>
		<customHeader/>
	</Page>
</mvc:View>